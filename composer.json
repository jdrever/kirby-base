{
  "name": "open-foundations/kirby-base",
  "description": "A set of base classes and blueprint for web development in a plugin format using Kirby CMS",
  "type": "kirby-plugin",
  "license": "MIT",
  "version": "2.0.1",
  "autoload": {
    "psr-4": {
      "BSBI\\WebBase\\": "classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BSBI\\WebBase\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "James Drever",
      "email": "james.drever@bsbi.org"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": ">=8.3.0 <8.5.0",
    "getkirby/cms": "^5.0.0",
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "slevomat/coding-standard": "^8.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "phpunit/phpunit": "^12.5"
  },
  "minimum-stability": "stable"
}
